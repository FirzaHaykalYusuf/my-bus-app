<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyBus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyBus" parent="Base.Theme.MyBus" />

    <style name="styleCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">@dimen/_10sdp</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text_large_regular_black" parent="normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="text_large_regular_white" parent="normal_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="text_normal_regular_black" parent="normal_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_normal_regular_white" parent="normal_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_large_bold_black" parent="normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
    </style>

    <style name="text_large_bold_white" parent="normal_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
    </style>

    <style name="text_normal_bold_black" parent="normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
    </style>

    <style name="text_normal_bold_white" parent="normal_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
    </style>

    <style name="text_small_bold_white" parent="normal_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>
    <style name="text_small_regular_black" parent="normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="button_style_white" parent="text_normal_bold_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ProfileNameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Tambahkan style lain jika perlu -->
    </style>

    <style name="ProfileJobStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <!-- Tambahkan style lain jika perlu -->
    </style>
    <style name="LabelStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Tambahkan style lain jika perlu -->
    </style>
</resources>