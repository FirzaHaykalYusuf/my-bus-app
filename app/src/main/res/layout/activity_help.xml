<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.activity.menu.HelpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorAccentGreen">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="@dimen/_5sdp"
            android:contentDescription="Back" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tv_help_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/WhitePrimary"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Teks Privacy Policy -->
            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/inter_regular"
                android:text="Kami menghargai privasi Anda. Informasi pribadi yang Anda berikan akan kami lindungi dan tidak akan dibagikan kepada pihak ketiga tanpa persetujuan Anda. Dengan menggunakan aplikasi ini, Anda menyetujui semua kebijakan privasi kami terkait dengan pengumpulan, penyimpanan, dan penggunaan data." />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Contact Us Section -->
            <TextView
                android:id="@+id/tv_contact_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/inter_semibold" />

            <TextView
                android:id="@+id/tv_contact_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: customercare@mybus.com"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: 021-1223-654"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
